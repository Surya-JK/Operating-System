#include<stdio.h>

int main() {
    int n, bt[20], p[20], wt[20], tat[20], i, j, temp;
    float avwt = 0, avtat = 0;

    printf("Enter total number of processes: ");
    scanf("%d", &n);

    printf("\nEnter Process Burst Time\n");
    for(i = 0; i < n; i++) {
        printf("P[%d]: ", i + 1);
        scanf("%d", &bt[i]);
        p[i] = i + 1; // Store process ID
    }

    // Sorting by Burst Time (Selection Sort)
    for(i = 0; i < n; i++) {
        for(j = i + 1; j < n; j++) {
            if(bt[i] > bt[j]) {
                // Swap Burst Time
                temp = bt[i];
                bt[i] = bt[j];
                bt[j] = temp;

                // Swap Process ID
                temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    }

    wt[0] = 0;

    for(i = 1; i < n; i++) {
        wt[i] = 0;
        for(j = 0; j < i; j++)
            wt[i] += bt[j];
    }

    printf("\nProcess\t\tBurst Time\tWaiting Time\tTurnaround Time");

    for(i = 0; i < n; i++) {
        tat[i] = bt[i] + wt[i];
        avwt += wt[i];
        avtat += tat[i];
        printf("\nP[%d]\t\t%d\t\t%d\t\t%d", p[i], bt[i], wt[i], tat[i]);
    }

    avwt /= i;
    avtat /= i;
    printf("\n\nAverage Waiting Time: %.2f", avwt);
    printf("\nAverage Turnaround Time: %.2f", avtat);

    return 0;
}




Enter total number of processes: 2

Enter Process Burst Time
P[1]: 1
P[2]: 2

Process		Burst Time	Waiting Time	Turnaround Time
P[1]		1		0		1
P[2]		2		1		3

Average Waiting Time: 0.50
Average Turnaround Time: 2.00
