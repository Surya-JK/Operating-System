#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h> /* Added for permission safety */

#define BUFFER_SIZE 1024

int main() {
    int source_fd, dest_fd;
    ssize_t bytes_read;
    char buffer[BUFFER_SIZE];

    printf("--- Step 1: Creating source file ---\n");
    source_fd = open("source.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (source_fd == -1) {
        perror("Error creating source.txt");
        return 1;
    }
    write(source_fd, "This is the text inside the source file.\n", 41);
    close(source_fd);
    printf("Source file created successfully.\n");

    printf("--- Step 2: Opening files for copy ---\n");
    source_fd = open("source.txt", O_RDONLY);
    if (source_fd == -1) {
        perror("Error opening source.txt for reading");
        return 1;
    }

    dest_fd = open("destination.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (dest_fd == -1) {
        perror("Error opening destination.txt");
        close(source_fd);
        return 1;
    }

    printf("--- Step 3: Copying data ---\n");
    while ((bytes_read = read(source_fd, buffer, BUFFER_SIZE)) > 0) {
        write(dest_fd, buffer, bytes_read);
    }
    
    close(source_fd);
    close(dest_fd);
    printf("Copy finished.\n");

    printf("--- Step 4: Verifying Output ---\n");
    dest_fd = open("destination.txt", O_RDONLY);
    if (dest_fd != -1) {
        while ((bytes_read = read(dest_fd, buffer, BUFFER_SIZE)) > 0) {
            // Write directly to screen (1 = stdout)
            write(1, buffer, bytes_read);
        }
        close(dest_fd);
    } else {
        printf("Could not open destination for verification.\n");
    }

    return 0;
}


