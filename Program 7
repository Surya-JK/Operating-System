#include <iostream>
#include <unistd.h>
#include <cstring>
#include <sys/wait.h>
using namespace std;

int main() {
    int fd[2]; // fd[0] - read, fd[1] - write
    char write_msg[] = "How are you";
    char read_msg[100];

    if (pipe(fd) == -1) {
        return 1;
    }

    int pid = fork();

    if (pid > 0) { // Parent Process
        close(fd[0]); // Close reading end
        write(fd[1], write_msg, strlen(write_msg) + 1);
        close(fd[1]);
        wait(NULL); // Wait for child
    } 
    else { // Child Process
        close(fd[1]); // Close writing end
        read(fd[0], read_msg, 100);
        cout << "Child received: " << read_msg << endl;
        close(fd[0]);
    }
    return 0;
}
