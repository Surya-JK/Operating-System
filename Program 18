#include <stdio.h>
#include <stdlib.h>

// Simple sorting function
void sort(int arr[], int n) {
    int i, j, temp;
    for (i = 0; i < n-1; i++) {
        for (j = 0; j < n-i-1; j++) {
            if (arr[j] > arr[j+1]) {
                temp = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = temp;
            }
        }
    }
}

int main() {
    int queue[20], n, head, i, seek = 0, max_range;
    int temp_queue[22]; // Extra space for head and bounds
    
    printf("Enter max range of disk: ");
    scanf("%d", &max_range);
    printf("Enter initial head position: ");
    scanf("%d", &head);
    printf("Enter size of queue request: ");
    scanf("%d", &n);
    printf("Enter the queue requests: ");
    for(i = 0; i < n; i++) {
        scanf("%d", &queue[i]);
        temp_queue[i] = queue[i];
    }

    // Add head and max_range to array for SCAN logic (assuming moving Right)
    temp_queue[n] = head;
    temp_queue[n+1] = max_range - 1;
    n = n + 2;

    sort(temp_queue, n);

    int head_index;
    for(i = 0; i < n; i++) {
        if(temp_queue[i] == head) {
            head_index = i;
            break;
        }
    }

    printf("\nSeek Sequence: ");
    // Scan Right (Upwards)
    for(i = head_index; i < n; i++) {
        printf("%d -> ", temp_queue[i]);
        if(i > head_index) 
            seek += abs(temp_queue[i] - temp_queue[i-1]);
    }
    // Scan Left (Downwards) from the end
    // Note: Jump from max end to the largest request on the left side
    seek += abs(temp_queue[n-1] - temp_queue[head_index-1]);
    
    for(i = head_index - 1; i >= 0; i--) {
        printf("%d -> ", temp_queue[i]);
        if(i < head_index - 1)
            seek += abs(temp_queue[i] - temp_queue[i+1]);
    }

    printf("End\nTotal Seek Operations: %d\n", seek);
    return 0;
}
