#include <iostream>
#include <vector>
#include <algorithm> // for find
using namespace std;

int main() {
    int capacity = 3; // Number of frames
    int pages[] = {1, 3, 0, 3, 5, 6, 3}; // Reference string
    int n = sizeof(pages) / sizeof(pages[0]);
    
    vector<int> frames(capacity, -1); // Initialize frames with -1
    int page_faults = 0;
    int index = 0; // Points to the FIFO position (oldest)

    cout << "Reference String: ";
    for(int x : pages) cout << x << " ";
    cout << "\n\n";

    for (int i = 0; i < n; i++) {
        int currentPage = pages[i];
        bool found = false;

        // Check if page is already in frames (Hit)
        for (int j = 0; j < capacity; j++) {
            if (frames[j] == currentPage) {
                found = true;
                break;
            }
        }

        if (!found) { // Page Fault (Miss)
            frames[index] = currentPage; // Replace oldest page
            index = (index + 1) % capacity; // Move pointer circularly
            page_faults++;
            
            // Print status
            cout << "Miss: Page " << currentPage << " -> Frames: [ ";
            for (int k : frames) {
                if(k != -1) cout << k << " ";
                else cout << "- ";
            }
            cout << "]" << endl;
        } else {
            cout << "Hit:  Page " << currentPage << endl;
        }
    }

    cout << "\nTotal Page Faults: " << page_faults << endl;
    return 0;
}

Reference String: 1 3 0 3 5 6 3 

Miss: Page 1 -> Frames: [ 1 - - ]
Miss: Page 3 -> Frames: [ 1 3 - ]
Miss: Page 0 -> Frames: [ 1 3 0 ]
Hit:  Page 3
Miss: Page 5 -> Frames: [ 5 3 0 ]
Miss: Page 6 -> Frames: [ 5 6 0 ]
Miss: Page 3 -> Frames: [ 5 6 3 ]

Total Page Faults: 6


=== Code Execution Successful ===
