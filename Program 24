#include <stdio.h>
#include <string.h>
#include <stdlib.h>

int main() {
    char filename[50], pattern[50], line[1024];
    FILE *fp;

    printf("Enter filename: ");
    scanf("%s", filename);
    printf("Enter pattern to search: ");
    scanf("%s", pattern);

    fp = fopen(filename, "r");
    if (fp == NULL) {
        perror("Error opening file");
        return 1;
    }

    printf("\nMatches found:\n");
    while (fgets(line, sizeof(line), fp) != NULL) {
        // strstr returns pointer if pattern exists in line
        if (strstr(line, pattern) != NULL) {
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
