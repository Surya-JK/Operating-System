#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <sys/stat.h>
#include <sys/types.h>
#include <dirent.h>

int main() {
    int fd;
    struct stat file_stat;
    char buffer[50];

    // Create a test file
    fd = open("test_io.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);
    write(fd, "0123456789ABCDEFGHIJ", 20);

    // --- 1. fcntl (Check Access Mode) ---
    // Retrieves file status flags
    int flags = fcntl(fd, F_GETFL);
    if ((flags & O_ACCMODE) == O_RDWR)
        printf("[fcntl] File is open for Read/Write.\n");

    // --- 2. stat (Get File Info) ---
    // Uses the filename to get stats
    if (stat("test_io.txt", &file_stat) == 0) {
        printf("[stat] File Size: %ld bytes\n", file_stat.st_size);
        printf("[stat] Inode No: %ld\n", file_stat.st_ino);
    }

    // --- 3. lseek (Seek) ---
    // Move pointer 5 bytes from beginning
    lseek(fd, 5, SEEK_SET);
    read(fd, buffer, 5);
    buffer[5] = '\0';
    printf("[lseek] Data read after seeking 5 bytes: %s\n", buffer);
    close(fd);

    // --- 4. opendir & readdir ---
    printf("\n[opendir/readdir] Listing Current Directory:\n");
    DIR *d = opendir(".");
    struct dirent *dir;
    
    if (d) {
        while ((dir = readdir(d)) != NULL) {
            // Filter out hidden files starting with '.'
            if (dir->d_name[0] != '.')
                printf("  > %s\n", dir->d_name);
        }
        closedir(d);
    }
    
    return 0;
}
