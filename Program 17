#include <stdio.h>
#include <stdlib.h> // For abs()

int main() {
    int queue[20], n, head, i, j, seek = 0, diff;
    float avg;

    printf("Enter max range of disk: ");
    int max_range;
    scanf("%d", &max_range);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter size of queue request: ");
    scanf("%d", &n);

    printf("Enter the queue of pending requests: ");
    for(i = 1; i <= n; i++) {
        scanf("%d", &queue[i]);
    }
    
    // Logic
    queue[0] = head; // Start from head
    printf("\nSeek Sequence is:\n");
    
    for(j = 0; j <= n-1; j++) {
        diff = abs(queue[j+1] - queue[j]);
        seek += diff;
        printf("%d -> ", queue[j]);
    }
    printf("%d\n", queue[n]); // Print last one

    printf("\nTotal Seek Operations: %d\n", seek);
    return 0;
}
